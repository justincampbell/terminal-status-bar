#!/usr/bin/env sh

set -e

network() {
  if scutil -r 8.8.8.8 | grep "^Reachable" > /dev/null; then
    if [ $quiet -eq 0 ]; then
      printf " 📶 "
    fi
  else
    printf " ❗️📶 "
  fi
}

power() {
  local remaining=$(pmset -g batt | grep "discharging" | cut -f 4 -d " ")

  if [[ -z $remaining ]]; then
    if [ $quiet -eq 0 ]; then
      printf " 🔌 "
    fi
  else
    if [[ $remaining == "(no" ]]; then remaining="?:??"; fi

    if [[ $remaining =~ ^0: ]]; then
      printf " ~$remaining ❗️🔋 "
    else
      printf " ~$remaining 🔋 "
    fi
  fi
}

show_help() {
  echo "tmux-status-bar"
  echo "github.com/justincampbell/tmux-status-bar"
  echo ""
  echo "  Options:"
  echo "    -q  quiet:   do not output anything normal (must be first argument)"
  echo "    -n  network: a signal bar icon, or a red x"
  echo "    -p  power:   a plug or battery, with the time remaining"
}

args=""
quiet=0

while getopts "hnpq" opt; do
  args="$args"$opt

  case "$opt" in
    h)
      show_help
      exit 0
      ;;
    n)
      network
      ;;
    p)
      power
      ;;
    q)
      quiet=1
      ;;
  esac
done

if [ -z "$args" ]; then
  show_help
  exit 1
else
  echo ""
fi
